<h1>New book</h1>
<%= form_with model: @book, url '/books' ,method :post do |f| %>
<div class= "field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<%= f.submit 'Create Book'%>

<% end %>