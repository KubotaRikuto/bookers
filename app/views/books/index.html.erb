<div>
  <!--フラッシュメッセージ実装-->
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<!-- 投稿一覧 -->

  <div class="book-list">
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan = "3"></th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td> <!-- Title -->
          <td><%= book.body %></td> <!-- Body -->
          <td><%= link_to "Show", book_path(book.id) %></td> <!-- Show -->
          <td><%= link_to "Edit", edit_book_path(book.id) %></td> <!-- Edit -->
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td> <!-- Destroy(メッセージ付) -->
        </tr>
      <% end %>
    </table>
  </div>

<!-- 新規投稿 -->
<h1>New book</h1>
<!--エラーメッセージ表示-->
<div class="error-text"><!--エラーメッセージ表示start-->
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <!--新規投稿フォーム-->
  <%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div class= "field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>

  <% end %>
</div> <!--エラーメッセージ表示end-->